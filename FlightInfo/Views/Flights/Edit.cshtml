@model FlightInfo.Models.Flight

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Flight</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FlightNumber" class="control-label"></label>
                <input asp-for="FlightNumber" class="form-control" />
                <span asp-validation-for="FlightNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <select asp-for="Origin" class="form-control" asp-items="ViewBag.Airports"></select>
            </div>
            <div class="form-group">
                <label asp-for="Destination" class="control-label"></label>
                <select asp-for="Destination" class="form-control" asp-items="ViewBag.Airports"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pilot" class="control-label"></label>
                <select asp-for="Pilot" class="form-control" asp-items="ViewBag.Pilots"></select>
            </div>
            <div class="form-group">
                <label asp-for="Plane" class="control-label"></label>
                <select asp-for="Plane" class="form-control" asp-items="ViewBag.Planes"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartureTime" class="control-label"></label>
                <input asp-for="DepartureTime" class="form-control" />
                <span asp-validation-for="DepartureTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassengerManifest" class="control-label"></label>
                @Html.ListBox("PassengerManifest",
                    new MultiSelectList(@ViewBag.Passengers, "Id", "FullName", @Model.PassengerManifest.Select(p => p.Id).ToArray()), new { @class = "form-control" })

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
