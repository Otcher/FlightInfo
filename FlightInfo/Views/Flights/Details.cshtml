@model FlightInfo.Models.Flight

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Flight</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlightNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlightNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DepartureTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DepartureTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Origin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Origin.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plane)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plane.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pilot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pilot.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PassengerManifest)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var p in Model.PassengerManifest)
                {
                    <li>@p.FullName</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    @if (@ViewBag.IsAdmin)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
