@{
    ViewData["Title"] = "Home Page";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/home.css">
}

<div class="text-center ">
    <h1 id="welcome-title" class="display-4">Welcome! Some flight statistics for you...</h1>
</div>
<div class="row">
    <div class="col-md-9">
        <div id="statistics-section" class="row">
            <div id="statistics-graph" class="card">
                <div class="card" id="graphs">
                    <svg id="age-group-graph"></svg>
                </div>
            </div>
            <div id="statistics" class="card">
                <div class="card-body">
                    <h4>COVID-19 Country Statistics</h4>
                    <div id="global-covid19-data">
                        <div class="row">
                            <table class="table table-striped table-bordered table-hover display" id="covid19-table">
                                <thead class="thead-light">
                                    <tr>
                                        <th>
                                            Country
                                        </th>
                                        <th>
                                            New Confirmed
                                        </th>
                                        <th>
                                            Total Confirmed
                                        </th>
                                        <th>
                                            New Deaths
                                        </th>
                                        <th>
                                            Total Deaths
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="covid19-table-data">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 justify-content-end">
        <div class="row">
            <div class="card m-b-30" id="video-card">
                <div class="card-body">
                    <section class="info-section">
                        <div class="text-center video-div">
                            <video id="video1" style="width:600px;max-width:100%;" controls="" data-vscid="2pq0mznng">
                                <source src="~/Media/Videos/video.mp4" type="video/mp4">
                                Your browser does not support HTML5 video.
                            </video>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="card m-b-30">
                <aside id="twitter" class="card-body">
                    <a class="twitter-timeline" data-width="610" data-height="400" href="https://twitter.com/EL_AL_ISRAEL">Tweets by El Al Airlines</a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                </aside>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script type="text/javascript" src="https://ajax.aspnetcdn.com/ajax/jquery.templates/beta1/jquery.tmpl.min.js"></script>
    <script src="~/js/home.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v5.min.js"></script>

    <script type="text/html" id="global-covid19-data-results">
        <tr>
            <td>
                ${Country}
            </td>
            <td>
                ${NewConfirmed}
            </td>
            <td>
                ${TotalConfirmed}
            </td>
            <td>
                ${NewDeaths}
            </td>
            <td>
                ${TotalDeaths}
            </td>
        </tr>
    </script>
}